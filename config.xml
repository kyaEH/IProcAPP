<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.iproc.theip" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>The Internet Protocol</name>
    <description>
        Not just a game.
    </description>
    <author email="pro@iproc.fr" href="https://iproc.fr">
        IProcTeam
    </author>
    <icon src="www/img/logo.png" platform="android"  />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/drawable-ldpi/pic.png" density="ldpi" />
        <icon src="res/drawable-mdpi/pic.png" density="mdpi" />
        <icon src="res/drawable-hdpi/pic.png" density="hdpi" />
        <icon src="res/drawable-xhdpi/pic.png" density="xhdpi" />
        <icon src="res/drawable-xxhdpi/pic.png" density="xxhdpi" />
        <icon src="res/drawable-xxxhdpi/pic.png" density="xxxhdpi" />
        
        <splash src="res/drawable-ldpi/pic.png" density="port-ldpi" />
        <splash src="res/drawable-mdpi/pic.png" density="port-mdpi" />
        <splash src="res/drawable-hdpi/pic.png" density="port-hdpi" />
        <splash src="res/drawable-xhdpi/pic.png" density="port-xhdpi" />
        <splash src="res/drawable-xxhdpi/pic.png" density="port-xxhdpi" />
        <splash src="res/drawable-xxxhdpi/pic.png" density="port-xxxhdpi" />
    </platform>
</widget>
